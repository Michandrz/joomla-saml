<?xml version="1.0" encoding="utf-8"?>
<extension type="library" method="upgrade">
    <name>OneLogin SAML Library</name>
    <author>OneLogin INC.</author>
    <libraryname>oneloginsaml</libraryname>
    <authorEmail>support@onelogin.com</authorEmail>
    <authorUrl>onelogin.com</authorUrl>
    <creationDate>January 2019</creationDate>
    <version>3.5.1</version>
    <copyright>Copyright (C) 2019 Onelogin Inc. All rights reserved.</copyright>
    <license>MIT</license>
    <config>
        <fields>
            <fieldset name="oneloginsaml" label="LIB_ONELOGINSAML_LIB_PARAMS_LABEL" >
                <field name="idp_entityid" type="text"
                       label="LIB_ONELOGINSAML_IDP_ENTITY_LABEL"
                       description="LIB_ONELOGINSAML_IDP_ENTITY_DEC"
                       size="40"
                       default=""
                />
                <field name="idp_sso" type="text"
                       label="LIB_ONELOGINSAML_IDP_SSO_LABEL"
                       description="LIB_ONELOGINSAML_IDP_SSO_DEC"
                       size="40"
                       default=""
                />
                <field name="idp_slo" type="text"
                       label="LIB_ONELOGINSAML_IDP_SLO_LABEL"
                       description="LIB_ONELOGINSAML_IDP_SLO_DEC"
                       size="40"
                       default=""
                />
                <field name="idp_x509cert" type="textarea"
                       label="LIB_ONELOGINSAML_IDP_X509CERT_LABEL"
                       description="LIB_ONELOGINSAML_IDP_X509CERT_DEC"
                       rows="8" cols="55"
                       default=""
                />
                <field name="debug" type="radio"
                       label="LIB_ONELOGINSAML_DEBUG_LABEL"
                       description="LIB_ONELOGINSAML_DEBUG_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="strict_mode" type="radio"
                       label="LIB_ONELOGINSAML_STRICT_MODE_LABEL"
                       description="LIB_ONELOGINSAML_STRICT_MODE_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="sp_entity_id" type="text"
                       label="LIB_ONELOGINSAML_SP_ENTITY_ID_LABEL"
                       description="LIB_ONELOGINSAML_SP_ENTITY_ID_DEC"
                       size="40"
                       default=""
                />
                <field name="nameid_encrypted" type="radio"
                       label="LIB_ONELOGINSAML_NAMEID_ENCRYPTED_LABEL"
                       description="LIB_ONELOGINSAML_NAMEID_ENCRYPTED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="authn_request_signed" type="radio"
                       label="LIB_ONELOGINSAML_AUTHN_REQUEST_SIGNED_LABEL"
                       description="LIB_ONELOGINSAML_AUTHN_REQUEST_SIGNED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="logout_request_signed" type="radio"
                       label="LIB_ONELOGINSAML_LOGOUT_REQUEST_SIGNED_LABEL"
                       description="LIB_ONELOGINSAML_LOGOUT_REQUEST_SIGNED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="logout_response_signed" type="radio"
                       label="LIB_ONELOGINSAML_LOGOUT_RESPONSE_SIGNED_LABEL"
                       description="LIB_ONELOGINSAML_LOGOUT_RESPONSE_SIGNED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="want_message_signed" type="radio"
                       label="LIB_ONELOGINSAML_WANT_MESSAGE_SIGNED_LABEL"
                       description="LIB_ONELOGINSAML_WANT_MESSAGE_SIGNED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="want_assertion_signed" type="radio"
                       label="LIB_ONELOGINSAML_WANT_ASSERTION_SIGNED_LABEL"
                       description="LIB_ONELOGINSAML_WANT_ASSERTION_SIGNED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="want_assertion_encrypted" type="radio"
                       label="LIB_ONELOGINSAML_WANT_ASSERTION_ENCRYPTED_LABEL"
                       description="LIB_ONELOGINSAML_WANT_ASSERTION_ENCRYPTED_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="sp_x509cert" type="textarea"
                       label="LIB_ONELOGINSAML_SP_X509CERT_LABEL"
                       description="LIB_ONELOGINSAML_SP_X509CERT_DEC"
                       rows="8" cols="55"
                       default=""
                />
                <field name="sp_privatekey" type="textarea"
                       label="LIB_ONELOGINSAML_SP_PRIVATEKEY_LABEL"
                       description="LIB_ONELOGINSAML_SP_PRIVATEKEY_DEC"
                       rows="8" cols="55"
                       default=""
                />
                <field name="nameid_format" type="list"
                                       label="LIB_ONELOGINSAML_NAMEID_FORMAT_LABEL"
                                       description="LIB_ONELOGINSAML_NAMEID_FORMAT_DEC"
                >
                    <option value="urn:oasis:names:tc:SAML:1.1:nameid-format:unspecified">LIB_ONELOGINSAML_NAMEID_UNSPECIFIED</option>
                    <option value="urn:oasis:names:tc:SAML:1.1:nameid-format:emailAddress">LIB_ONELOGINSAML_NAMEID_EMAILADDRESS</option>
                    <option value="urn:oasis:names:tc:SAML:2.0:nameid-format:transient">LIB_ONELOGINSAML_NAMEID_TRANSIENT</option>
                    <option value="urn:oasis:names:tc:SAML:2.0:nameid-format:persistent">LIB_ONELOGINSAML_NAMEID_PERSISTENT</option>
                    <option value="urn:oasis:names:tc:SAML:2.0:nameid-format:encrypted">LIB_ONELOGINSAML_NAMEID_ENCRYPTED</option>
                    <option value="urn:oasis:names:tc:SAML:2.0:nameid-format:kerberos">LIB_ONELOGINSAML_NAMEID_KERBEROS</option>
                    <option value="urn:oasis:names:tc:SAML:1.1:nameid-format:X509SubjectName">LIB_ONELOGINSAML_NAMEID_X509SUBJECTNAME</option>
                    <option value="urn:oasis:names:tc:SAML:2.0:nameid-format:entity">LIB_ONELOGINSAML_NAMEID_ENTITY</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <files>
        <filename>oneloginsaml.xml</filename>
        <folder>vendor</folder>
    </files>
    <updateservers>
        <server type="collection">https://raw.githubusercontent.com/onelogin/joomla-saml/master/updater.xml</server>
    </updateservers>
</extension>
