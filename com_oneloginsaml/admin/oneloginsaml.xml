<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.3" method="upgrade">
    <name>OneLogin SAML</name>
    <author>OneLogin Inc.</author>
    <creationDate>Arpil 2020</creationDate>
    <copyright>Copyright (C) 2019 Onelogin Inc. All rights reserved.</copyright>
    <license>MIT</license>
    <authorEmail>support@onelogin.com</authorEmail>
    <authorUrl>onelogin.com</authorUrl>
    <version>3.0.0</version>
    <description>COM_ONELOGIN_XML_DESCRIPTION</description>
    <install> 
	<sql>
	    <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
	</sql>
    </install>
    <uninstall> 
	<sql>
	    <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
	</sql>
    </uninstall>
    <update> 
	<schemas>
	    <schemapath type="mysql">sql/updates/mysql</schemapath>
	</schemas>
    </update>
    <administration>
	<menu link='index.php?option=com_oneloginsaml'>OneLogin</menu>
	<submenu>
	    
	</submenu>
	<files folder="admin">
	    <folder>language</folder>
	    <folder>language/en-US</folder>
	    <folder>models</folder>
	    <folder>controllers</folder>
	    <folder>views</folder>
	    <folder>views/oneloginsaml</folder>
	    <folder>views/oneloginsaml/tmpl</folder>
	    <folder>sql</folder>
	    <folder>sql/updates</folder>
	    <folder>sql/updates/mysql</folder>
	    <filename>controller.php</filename>
	    <filename>index.html</filename>
	    <filename>language/index.html</filename>
	    <filename>language/en-US/en-us.com_oneloginsaml.ini</filename>
	    <filename>language/en-US/en-us.com_oneloginsaml.sys.ini</filename>
	    <filename>models/index.html</filename>
	    <filename>models/attributes.php</filename>
	    <filename>config.xml</filename>
	    <filename>oneloginsaml.php</filename>
	    <filename>controllers/index.html</filename>
	    <filename>views/oneloginsaml/index.html</filename>
	    <filename>views/oneloginsaml/tmpl/index.html</filename>
	    <filename>views/oneloginsaml/tmpl/default.php</filename>
	    <filename>views/oneloginsaml/view.html.php</filename>
	    <filename>views/index.html</filename>
	    <filename>sql/index.html</filename>
	    <filename>sql/updates/index.html</filename>
	    <filename>sql/updates/mysql/0.0.1.sql</filename>
	    <filename>sql/updates/mysql/index.html</filename>
	    <filename>sql/install.mysql.utf8.sql</filename>
	    <filename>sql/uninstall.mysql.utf8.sql</filename>
	</files>
	<languages folder="admin">
	    <language tag="en-US">language/en-US.com_oneloginsaml.ini</language>
	    <language tag="en-US">language/en-US.com_oneloginsaml.sys.ini</language>
	    <language tag="en-GB">language/en-GB.com_oneloginsaml.ini</language>
	    <language tag="en-GB">language/en-GB.com_oneloginsaml.sys.ini</language>
	</languages>
    </administration>
</extension>


