<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="authentication" method="upgrade">
    <name>plg_authentication_oneloginsaml</name>
    <author>OneLogin INC.</author>
    <authorEmail>support@onelogin.com</authorEmail>
    <authorUrl>onelogin.com</authorUrl>
    <creationDate>January 2019</creationDate>
    <version>1.7.0</version>
    <copyright>Copyright (C) 2019 Onelogin Inc. All rights reserved.</copyright>
    <license>MIT</license>
    <config>
        <fields>
            <fieldset name="plg_authentication_oneloginsaml" label="PLG_AUTH_ONELOGINSAML">
                <field name="autocreate" type="radio"
                       label="PLG_AUTH_ONELOGINSAML_AUTOCREATE_LABEL"
                       description="PLG_AUTH_ONELOGINSAML_AUTOCREATE_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="updateuser" type="radio"
                       label="PLG_AUTH_ONELOGINSAML_UPDATEUSER_LABEL"
                       description="PLG_AUTH_ONELOGINSAML_UPDATEUSER_DEC"
                       default="0" 
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="debug" type="radio"
                       label="PLG_AUTH_ONELOGINSAML_DEBUG_LABEL"
                       description="PLG_AUTH_ONELOGINSAML_DEBUG_DEC"
                       default="0"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field name="default_session_time" type="number"
                       label="PLG_AUTH_ONELOGINSAML_DEFAULT_SESSION_TIME_LABEL"
                       description="PLG_AUTH_ONELOGINSAML_DEFAULT_SESSION_TIME_DEC"
                       default="3600"
                />
        </fieldset>
    </fields>
    </config>
    <files>
        <filename plugin="oneloginsaml">oneloginsaml.php</filename>
        <filename>index.html</filename>
    </files>
    <updateservers>
        <server type="collection">https://raw.githubusercontent.com/onelogin/joomla-saml/master/updater.xml</server>
    </updateservers>
</extension>